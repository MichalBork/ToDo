{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: linear-gradient(to right, #2b5876, #4e4376); /* tło gradient */
            color: #fff; /* kolor tekstu */
        }

        .card {
            margin: auto; /* centrowanie karty */
            border-radius: 10px; /* zaokrąglenie rogów */
            padding: 20px; /* wewnętrzne wypełnienie */
        }

        .btn {
            background-color: #4e4376; /* kolor tła przycisku */
            color: #fff; /* kolor tekstu przycisku */
        }

        .btn:hover {
            background-color: #2b5876; /* kolor tła przycisku po najechaniu */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="card">
                    <h1 class="text-center">Rejestracja</h1>

                    {{ form_start(registrationForm) }}
                    <div class="mb-3">
                        {{ form_label(registrationForm.email, 'E-mail', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Hasło', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-lg" type="submit">Zarejestruj</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
